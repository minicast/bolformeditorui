{
  "name": "bolformeditorui",
  "description": "bolformeditorui",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist -v && mkdir dist -v && mkdir dist/browser -v",
    "build": "babel src -d dist --verbose",
    "postbuild": "browserify ./dist/render.js -o ./dist/browser/bundle.js -v",
    "prewatch": "if [ -d dist ]; then { rm -rf dist && mkdir dist && touch dist/bundle.js; } fi",
    "watch": "watchify src/index.jsx -t babelify --outfile dist/bundle.js -v",
    "commit": "git-cz",
    "test": "mocha --compilers .:tests/compiler.js tests/*-test.js",
    "check-coverage": "istanbul check-coverage --statements 0 --branches 0 --functions 0 --lines 0",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/minicast/bolformeditorui.git"
  },
  "keywords": [
    "bolformeditorui"
  ],
  "author": "minicast <minicast@gmx.com> (https://github.com/minicast)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/minicast/bolformeditorui/issues"
  },
  "homepage": "https://github.com/minicast/bolformeditorui#readme",
  "dependencies": {
    "bolformula": "0.0.5",
    "bootstrap": "3.3.5",
    "brace": "0.5.1",
    "d3": "3.5.6",
    "katex": "0.5.1",
    "lodash": "3.10.1",
    "react": "0.14.0",
    "react-tools": "0.13.3"
  },
  "devDependencies": {
    "babel": "5.8.23",
    "babelify": "6.4.0",
    "blanket": "1.1.9",
    "browserify": "11.2.0",
    "chai": "3.3.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.1.0",
    "coveralls": "2.11.4",
    "cz-conventional-changelog": "1.1.4",
    "ghooks": "0.3.2",
    "glob": "5.0.15",
    "istanbul": "0.4.0",
    "jsdom": "7.0.2",
    "mocha": "2.3.3",
    "mocha-jsdom": "1.0.0",
    "mocha-lcov-reporter": "1.0.0",
    "react": "0.14.0",
    "react-dom": "0.14.0",
    "react-tools": "0.13.3",
    "reactify": "1.1.1",
    "semantic-release": "^4.3.5",
    "watchify": "3.4.0"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
